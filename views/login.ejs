<!doctype html>
<html lang="en">

<head>
	<%- include ('partials/head.ejs') %>
	<title>TodayIngoLearned</title>
	<link href="/static/css/login.css" rel="stylesheet">
</head>

<body class="text-center">

	<main class="form-signin">
		<form method="post" action="/login">
			<img class="mb-4" src="/static/images/icons/app-icon-144.png" alt="" width="144" height="144">
			<h1 class="h3 mb-3 font-weight-normal">Welcome!</h1>
			<br>

			<div class="form-floating">
				<input autocomplete="username" type="text" name="username" id="username" class="form-control" placeholder="Ingo">
				<label for="username">Username</label>
			</div>
			<div class="form-floating">
				<input autocomplete="current-password" type="password" name="password" id="password" class="form-control" placeholder="Password">
				<label for="password">Password</label>
			</div>

			<button class="w-100 btn btn-lg btn-primary" type="submit">Login</button>
			<p class="mt-5 mb-3 text-muted">TodayIngoLearned (2020 - 2021)</p>
		</form>
	</main>

	<%- include ('partials/footer.ejs') %>
</body>

</html>
