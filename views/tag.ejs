<!doctype html>
<%- include ('partials/html.ejs') %>

<head>
    <%- include ('partials/head.ejs') %>
    <title>TodayIngoLearned</title>
</head>

<body>
<%- include ('partials/navigation.ejs') %>

<main class="flex-shrink-0">
    <div class="container">

    <h2>Tag: <%=tag %></h2>
 
    <hr>
    <strong>Related Tags:&nbsp;</strong>
    <% for (let i in related_tags) { %>
        <a href="/tag/<%= related_tags[i].substring(1) %>"><span class="badge bg-secondary"><%=related_tags[i] %></span></a>
    <% } %>
    <hr>

    <% for (let i in tils_keys) { %>
        <% let til = tils_objects[tils_keys[i]]; %>
        <div class="card">
            <div class="card-body">
                <h5 class="card-title"><%= til.title %></h5>
                <h6 class="card-subtitle mb-2 text-muted"><%= til.date.toLocaleString('de-DE') %></h6>
                <% for (let tag in til.tags) { %>
                    <a href="/tag/<%=til.tags[tag].substring(1) %>"><span class="badge bg-secondary"><%=til.tags[tag] %></span></a>
                <% } %>
                <hr>
                <p class="card-text md description"><%=til.description %></p>
                <hr>
                <a href="/til/view/<%= til.til_id %>" class="btn btn-secondary">View</a>
                <a href="/comment/add/<%= til.til_id %>" class="btn btn-primary">Add Comment</a>
                <a href="/til/edit/<%= til.til_id %>" class="btn btn-primary">Edit</a>
            </div>
        </div><br>
    <% } %>

    </div>
</main>

<%- include ('partials/footer_text.ejs') %>

<%- include ('partials/footer.ejs') %>
</body>

</html>